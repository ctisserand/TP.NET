@using ASP.Server.Controllers
@using ASP.Server.ViewModels
@model CreateBookViewModel
@{
    ViewData["Title"] = "Add a book";
}
<style>
.input-group {
    margin-top:10px;
    display:flex;
    justify-content:space-between;
    flex-wrap:wrap;
}
input, textarea, select {
    flex-basis:85%;
}
label {
    flex-basis:10%;
}
</style>

<!-- Voici une facon de faire, mais ce n'est pas la seul, a vous de jouer ! -->
<form asp-controller="Book" asp-action="Create">
    <div class="input-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <label asp-for="Content"></label>
        <input asp-for="Content" />
    </div>
    
    <span asp-validation-for="Title" class="text-danger"></span>
    <span asp-validation-for="Price" class="text-danger"></span>
    <span asp-validation-for="Content" class="text-danger"></span>
    
    <div class="input-group">
        <label asp-for="Authors"></label>
        <!--Si la page rend une erreur a cette ligne, c'est que vous n'avez pas envoyé la liste des genres dans le Controller !!! ! -->
        <select asp-for="Authors" asp-items="@(new SelectList(Model.AllAuthors,"Id","Name"))">
        </select>
    </div>
    <span asp-validation-for="Authors" class="text-danger"></span>
    <div class="input-group">
        <label asp-for="Genres"></label>
        <!--Si la page rend une erreur a cette ligne, c'est que vous n'avez pas envoyé la liste des genres dans le Controller !!! ! -->
        <select asp-for="Genres" asp-items="@(new SelectList(Model.AllGenres,"Id","Name"))">
        </select>
    </div>
    <span asp-validation-for="Genres" class="text-danger"></span>
    <input type="submit" value="Add" style="width: 100%; margin-top: 50px" />
</form>